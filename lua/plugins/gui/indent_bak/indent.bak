return {
    "preservim/vim-indent-guides",
    config = function()
      	-- Enable indent guides
      	vim.g.indent_guides_enable_on_vim_startup = 1
      	vim.g.indent_guides_auto_colors = 0  -- Disable auto colors

      	-- Set guide width
      	vim.g.indent_guides_guide_size = 1

      	-- Define colors for the indent guides
      	vim.cmd [[
        	highlight IndentGuidesOdd  guibg=#000000 ctermbg=0
        	highlight IndentGuidesEven guibg=#121212 ctermbg=8
      	]]

      	-- Force a refresh so the colors apply
      	vim.cmd("IndentGuidesEnable")
	end,
}
